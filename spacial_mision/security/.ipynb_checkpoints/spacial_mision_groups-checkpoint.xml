<?xml version="1.0" encoding="utf-8"?>

<!-- Security Group -->
<odoo>
<record id = "group_space_admin" model="res.groups">
    <field name="name">Admin Space Misión</field>
    <field name="comment"> Admin members have all access right.
                           Can do all CRUD operations.
    </field>
</record>
<record id = "group_space_crew" model="res.groups">
    <field name="name">Crew Space Misión</field>
    <field name="comment"> Crew members have some access right.
                           Can do everything But Delete.
    </field>
</record>

<record id = "group_space_user" model="res.groups">
    <field name="name">General User Space Misión</field>
    <field name="comment"> General user members have few access right.
                           Can only see (read) the information related
                           to the Spaceship.
    </field>
</record>
</odoo>