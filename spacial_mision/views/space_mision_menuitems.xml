<?xml version="1.0" encoding="utf-8"?>

<!-- Views -->
<odoo>
    <data>
        <record model="ir.actions.act_window" id="spaceship_list_action">
            <field name="name">Spaceship</field>
            <field name="res_model">spacial_mision.spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first Spaceship
                </p>
            </field>
        </record>
        
        <menuitem name="Odoo Space Mision"
                  id="menu_space"
                  sequence="1"/>
        
        <menuitem id="menu_space_sub" name="Odoo Space Mision" parent="menu_space" sequence="2"/>
        
        <menuitem id="menu_space_spaceship" name="Spaceship" parent="menu_space_sub" sequence="3"
                  action="spaceship_list_action"/>
        
        
    </data>
</odoo>