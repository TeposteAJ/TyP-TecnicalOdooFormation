<?xml version="1.0" encoding="utf-8"?>

<!-- Views- Menu Spacial Mission -->
<odoo>

        
        <record model="ir.ui.view" id="action_view_project_mission">
            <field name='name'>spacial_mission.project.wizard.form</field>
            <field name='model'>spacial_mission.project.wizard</field>
            <field name='arch' type='xml'>
                <form string='Create Project from Mission'>
                    <header></header>
                    <sheet>
                         <h2><field name="name"/></h2>
               
                    <group>
                        <group>
                        <separator string="General" colspan="2"/>
                        <field name="user_id"/>
                        <field name="mission_id"/>
                        <field name="is_favorite"/>
                        <field name="collaborator_count"/>
                        </group>
                        
                        <group>
                        <separator string="Details" colspan="2"/>
                        <field name="active"/>
                        <field name="label_tasks"/>
                        <field name="date_start"/>
                        <field name="privacy_visibility"/>
                        </group>
                     </group>
                        
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Collaborator">
                                <field name="collaborator_ids"/>
                            </page>
                        </notebook>
    
                    </sheet>
                    <footer>
                        <button name="create_project" type="object"
                                string="Create" class="oe_highlight"/>
                        <button special='cancel' string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        
        <record id="launch_project_window"
                model='ir.actions.act_window'>
            <field name="name">Create-Project</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">spacial_mission.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="binding_model_id" ref="spacial_mission.model_spacial_mission_mission"/>
            <field name="target">new</field>
            <!-- archivoaparte .txt que debeÂ¡o explorar-->
        </record>
 
</odoo>