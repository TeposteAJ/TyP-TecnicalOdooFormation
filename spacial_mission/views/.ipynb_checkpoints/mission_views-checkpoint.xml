<?xml version="1.0" encoding="utf-8"?>

<!-- Mission Views -->
<odoo>
    <data>
        <record model="ir.ui.view" id="mission_view_form">
            <field name="name">spacial_mission.mission.form</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                 <form string="Mission Form">
                     
                     <header></header>
                     
                     <sheet>
                         <h1><field name="name"/></h1>
                         <h3><field name="mission_id"/></h3>
                         
                         
                         <group>
                             <group>
                                 <separator string="Mission Objetive" colspan="2"/>
                                 <field name="goal"/>
                             </group>
                             
                             <group>
                                 <separator string="General Dates" colspan="2"/>
                                 <field name="type"/>
                                 <field name="days"/>
                                 <field name="active"/>
                             </group>
                         </group>
                         
                         
                         <notebook>
                            <page string="Specs">
                                <group>
                                    <group>
                                        <separator string="Mission Dates"/>
                                        <field name="launch_date"/>
                                        <field name="return_date"/>
                                    </group>
                                    
                                    <group>
                                        <separator string="SpaceShip Dates"/>
                                        <field name="spaceship_id"/>
                                        <field name="model"/>
                                    </group>

                                </group>
                            </page>
                             
                            <page string="Crew">
                                <separator string="Mission Manager"/>
                                <field name="captain"/>
                                
                                <separator string="Mission Members"/>
                                <field name="crew_mission"/>
                            </page>   
                             
                             <page string="Cost &amp; Budgets">
                                 <group>
                                    <group>
                                         <separator string="General"/>
                                         <field name="budget_initial"/>
                                         <field name="cost"/>
                                         <field name="budget_emergency"/>
                                    </group> 
                                     
                                    <group>
                                        <separator string="Detail Budget"/>
                                        <field name="budget_fuel"/>
                                        <field name="budget_supplies"/>
                                        <field name="budget_staff"/>
                                        <field name="budget_crew"/>
                                    </group> 
                                  </group>

                            </page>   
                             
                        </notebook>
                         
                     </sheet>
                    
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_list">
            <field name="name">spacial_mission.mission.list</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                <tree string="Mission List">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="captain"/>
                    <field name="days"/>
                    <field name="launch_date"/>
                </tree>
            </field>
        </record>
        
         <record model="ir.ui.view" id="mission_view_search">
            <field name="name">spacial_mission.mission.search</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                <search string="Mission Search">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="captain"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Type Mission" name="type" 
                                domain="[]" context="{'group_by': 'type'}"/>
                        
                        <filter string="Spaceship" name="spaceship"
                                domain="[]" context="{'group_by': 'spaceship_id'}"/>
                    </group>
                    
                
                    
                    <filter string="Active Mission" name="active"
                            domain="[('active', '=', True)]" context="{'active': 'True'}"/> 
                    
                    <filter string="Build Date" name="build_date" 
                            domain="[]"/> 
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_pivot">
            <field name="name">spacial_mission.mission.pivot</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="type" type="row"/>
                    <field name="name" type="row"/>
                    <field name="cost" type="measure"/>
                    <field name="budget_fuel" type="measure"/>
                    <field name="budget_supplies" type="measure"/>
                    <field name="budget_staff" type="measure"/>
                    <field name="budget_crew" type="measure"/>
                    
                    <field name="budget_initial" type="measure"/>
                    <field name="budget_emergency" type="measure"/>
                  
                </pivot>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_calendar">
            <field name="name">spacial_mission.mission.calendar</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                <calendar string="Mission Calendar"
                          date_start="launch_date"
                          date_stop="return_date"
                          color="name"
                          mode="year">
                    
                    <field name="type"/>
                    <field name="captain"/>
                  
                </calendar>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_gantt">
            <field name="name">spacial_mission.mission.gantt</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                <gantt string="Mission Gantt"
                          date_start="launch_date"
                          date_stop="return_date"
                          progress_bar="type"
                          scales="week,month,year">
                    
                    <templates>
                        <div t-name="gantt-popover">
                            <!-- Gantt Popover Template -->
                        </div>
                    </templates>
                  
                </gantt>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_graph">
            <field name="name">spacial_mission.mission.graph</field>
            <field name="model">spacial_mission.mission</field>
            <field name="arch" type="xml">
                <graph string="Mission Graph" sample="1" >
                    <field name="cost" type="measure" string="Mission Cost"/>
                    <field name="budget_fuel" type="measure"/>
                    <field name="budget_supplies" type="measure" />
                    <field name="type" invisible="1"/>
                    <field name="name"/>
                  
                </graph>
                
                
            </field>
        </record>
        
    </data>
</odoo>