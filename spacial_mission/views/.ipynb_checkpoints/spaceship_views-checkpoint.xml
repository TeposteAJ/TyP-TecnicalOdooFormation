<?xml version="1.0" encoding="utf-8"?>

<!-- Spaceship Views -->
<odoo>
    <data>
        <record model="ir.ui.view" id="spaceship_view_form">
            <field name="name">spacial_mission.spaceship.form</field>
            <field name="model">spacial_mission.spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <header></header>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <h3><field name="model"/></h3>
                    
                        <group>
                            <group>
                                <separator string="Crew" colspan="2"/>
                                <field name="captain"/>
                                <field name="required_crew"/>
                                <field name="max_ocupation"/>
                            </group>
                            
                            <group>
                                <separator string="Spaceship" colspan="2"/>
                                <field name="type"/>
                                <field name="build_date"/>
                                <field name="active"/>
                            </group>
                            
                        </group>
                        
                        <notebook>
                            <page string="Specs">
                                <group>
                                    <group>

                                        <separator string="Dimensions"/>
                                        <field name="length"/>
                                        <field name="width"/>
                                    </group>

                                    <group>

                                        <separator string="Engine"/>
                                        <field name="engine_number"/>
                                        <field name="fuel_type"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Missions">
                                <separator string="Missions Active"/>
                                <field name="mission_ids"/>
                                
                                <separator string="Missions In-Active"/>
                                <field name="mission_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="spaceship_view_list">
            <field name="name">spacial_mission.spaceship.list</field>
            <field name="model">spacial_mission.spaceship</field>
            <field name="arch" type="xml">
                <tree string="Spaceship List">
                    <field name="name"/>
                    <field name="model"/>
                    <field name="type"/>
                    <field name="captain"/>
                    <field name="fuel_type"/>
                    <field name="build_date"/>
                </tree>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="spaceship_view_search">
            <field name="name">spacial_mission.spaceship.search</field>
            <field name="model">spacial_mission.spaceship</field>
            <field name="arch" type="xml">
                <search string="Spaceship Search">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="captain"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Type Spaceship" name="type" 
                                domain="[]" context="{'group_by': 'type'}"/>
                        
                        <filter string="Model Spaceship" name="model"
                                domain="[]" context="{'group_by': 'model'}"/>
                    </group>
                    
                
                    
                    <filter string="Active Spaceship" name="active"
                            domain="[('active', '=', True)]" context="{'active': 'True'}"/> 
                    
                    <filter string="Build Date" name="build_date" 
                            domain="[]"/> 
                    
                 <!-- Como sacar la sintaÃ­s de un domain Seetings/Technical/User-definded Filters/New  (en debugmode) -->
                </search>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="spaceship_view_pivot">
            <field name="name">spacial_mission.spaceship.pivot</field>
            <field name="model">spacial_mission.spaceship</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="type" type="row"/>
                    <field name="name" type="row"/>
                    <field name="max_ocupation" type="measure"/>
                    <field name="required_crew" type="measure"/>
                    
                </pivot>
            </field>
        </record>
        
        <record model="ir.ui.view" id="spaceship_view_graph">
            <field name="name">spacial_mission.spaceship.graph</field>
            <field name="model">spacial_mission.spaceship</field>
            <field name="arch" type="xml">
                <graph string="Spaceship Graph" sample="1" >
                    <field name="length" type="measure" string="Length"/>
                    <field name="width" type="measure" string="Width"/>
                    <field name="max_ocupation" type="measure" />
                    <field name="required_crew" type="measure" />
                    <field name="type" invisible="1"/>
                    <field name="name"/>
                  
                </graph>
                
                
            </field>
        </record>
        
        
    </data>
    
</odoo>