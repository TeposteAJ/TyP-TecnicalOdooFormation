<?xml version="1.0" encoding="utf-8"?>

<!--Web Space Templates-->
<odoo>
    <data>
        <template id="mission_website">
            <t t-call="website.layout">
                <t t-set="title">Spacial Mission</t>
                <div class="container">
                   
                    <h1>Missions</h1>
                    <t t-foreach="missions" t-as="mission">
                        <h3>
                        <t t-esc="mission.id"/>
                        <t t-esc="mission.name"/>
                        </h3>
                        
                        <p> Description:
                        <span t-field="mission.goal"/>
                        </p>
                        
                        <p>Type:
                        <span t-field="mission.type"/>
                        </p>
                        
                        <strong>Projects</strong>
                        <t t-foreach="mission.project_ids" t-as="project">
                            <p>
                                <a t-attf-href="/spacial-mission/{{ slug(mission)}}">
                                    <t t-esc="project.name"/>
                                    
                                </a>
                            </p>
                            <p>Last modified:
                                <i t-field="project.write_date" t-field-options='{"format": "long"}'/>
                            </p>
                        </t>
                        <t t-if="not mission.project_ids">
                            <p>No Project Currently</p>
                        </t>
                        
                    </t>
                
                </div>
            </t>   
        </template>
        
        <template id="project_website">
            <t t-call="website.layout">
                <t t-set="title">Project</t>
                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="missionp.project_ids" t-as="project">
                        <h3 t-field="project.name"/>
                        <p>Last Modified:
                            <i t-field="project.write_date" t-field-options='{"format": "long"}'/>
                        </p>
                        <p>Mission:
                            <t t-esc="project.mission_id.name"/>
                        </p>
                        <h3>Collaborators:</h3>
                        <ul>
                            <t t-foreach="project.collaborator_ids" t-as="collaborator">
                                <li>
                                    <span t-field="collaborator.name"/>
                                </li>
                            </t>
                        </ul>
                        </t>
                    </div>
                </div>
                    
            </t>
            
        </template>
    </data>
</odoo>


                    
                    
                    
                    
                    